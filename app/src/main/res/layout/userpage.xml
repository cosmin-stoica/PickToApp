<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlight">


    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutBtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white_button"
        android:text="Logout"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:textColor="@color/indietro_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutMain"/>

    <LinearLayout
        android:elevation="51dp"
        android:id="@+id/linearLayoutButtons"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/modificaUsername"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/white_button"
            android:text="Modifica username"
            android:textAllCaps="false"
            android:textColor="@color/indietro_color" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/modificaPassword"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/white_button"
            android:text="Modifica password"
            android:textAllCaps="false"
            android:textColor="@color/indietro_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/vediUtenti"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/white_button"
            android:text="Vedi Utenti"
            android:textAllCaps="false"
            android:textColor="@color/indietro_color" />


    </LinearLayout>


    <LinearLayout
        android:elevation="51dp"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/CicliCompletatiCounter"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="10"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cicli completati"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout

            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/CicliOkCounter"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cicli OK"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/CicliNokCounter"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3"
                android:textSize="30dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cicli NOK"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/profile_initial"
        android:elevation="51dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="420dp"
        android:background="@drawable/white_circle"
        android:gravity="center"
        android:text="N"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tipoOperatore"
        android:elevation="51dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Tipo op"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/codiceOperatore"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Codice Operatore"
        android:textColor="@color/black"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        android:elevation="51dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="410dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp"
        app:layout_constraintTop_toTopOf="@id/linearLayoutMain"
        app:layout_constraintEnd_toEndOf="@id/linearLayoutMain"
        app:layout_constraintStart_toStartOf="@id/linearLayoutMain"
        app:layout_constraintWidth_percent="0.5" />




</androidx.constraintlayout.widget.ConstraintLayout>
