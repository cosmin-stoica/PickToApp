<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Stato premuto -->
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <solid android:color="#505050"/> <!-- Colore per lo stato premuto -->
    </shape>
</item>
<!-- Stato attivato -->
<item android:state_activated="true">
    <shape android:shape="rectangle">
        <solid android:color="#505050"/> <!-- Colore per lo stato attivato -->
    </shape>
</item>
<!-- Stato normale -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="#303030"/> <!-- Colore per lo stato normale -->
    </shape>
</item>
</selector>
